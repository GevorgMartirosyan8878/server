{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es5",
    "sourceMap": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "outDir": "build",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "baseUrl": "./",
    "strictNullChecks": false,

  },
    "exclude": [
      "node_modules",
      "test",
      "build",
      "**/*spec.ts",
  ],
    "include": ["src/**/*.ts"]
}